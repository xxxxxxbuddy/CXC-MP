page{
  background-color:#E9E9E9;
}
.header{
  background-color: #fff;
  width:100%;
  padding-bottom:20rpx;
}
.header image{
  width: 22rpx;
  height: 38rpx;
  margin-top: 22rpx;
  margin-left: 16rpx;
  margin-right: 13rpx;
  margin-bottom:-4rpx;

}
.header text{
  color: rgba(0, 187, 221, 1);
  line-height: 30rpx;
  font-size: 40rpx;
}
.button{
  width: 220rpx;
  display: inline-block;
}
.title{
  margin-left: 75rpx;
  display: inline-block;
}

.tabs{
  box-shadow: 0rpx 1rpx 1rpx 0rpx rgba(0, 0, 0, 0.5);
}
.tabs ul{
  display: flex;
}
.tabs ul li{
  flex: 1;
  text-align: center;
  background-color: #fff;
  height:84rpx;
  line-height:84rpx;
  color: rgba(54, 142, 153, 1);
  font-size: 30rpx;
}

#container{
  position: relative;

}
#joinedCom{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;

}
.community{
  background-color: #fff;
  transition: transform 0.2s;
  border: rgba(217, 217, 217, 1) solid 2rpx;
  height: 200rpx;
}
.community image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  vertical-align: top;
  float:left;
}
.community text{
  display: inline-block;
}
.comName{
  margin-top: 20rpx;
  font-size: 36rpx;
  line-height: 54rpx;
  margin-right:200rpx;
}
.comInfo{
  font-size: 32rpx;
  line-height: 48rpx;
}

#establishedCom{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  
}
