page{
  background-color:#E9E9E9;
  
}
.header{
  background-color: #fff;
  width:100%;
  padding-bottom:20rpx;
}
.header image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 22rpx;
  margin-left: 16rpx;
  margin-right: 13rpx;
  margin-bottom:-4rpx;

}
.header text{
  color: rgba(0, 187, 221, 1);
  line-height: 30rpx;
  font-size: 40rpx;
}
.button{
  width: 230rpx;
  display: inline-block;
}
.title{
  margin-left: 115rpx;
  display: inline-block;
}

.tabs{
  box-shadow: 0rpx 1rpx 1rpx 0rpx rgba(0, 0, 0, 0.5);
}
.tabs ul{
  display: flex;
}
.tabs ul li{
  flex: 1;
  text-align: center;
  background-color: #fff;
  height:84rpx;
  line-height:84rpx;
  color: rgba(54, 142, 153, 1);
  font-size: 30rpx;
}

#container{
  position: relative;
}
#question{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.publishedQuestion{
  background-color: #fff;
  height: 154rpx;
  transition: transform 0.2s;
  border: rgba(217, 217, 217, 1) solid 2rpx;
}
.questionTitle{
  padding:14rpx 30rpx;
  padding-top: 26rpx;
  display:block;  
  font-size: 30rpx;
  line-height: 45rpx;
}
.questionSocialInfo{
  color: rgba(128, 128, 128, 1);
	font-size: 26rpx;
	line-height: 39rpx;
  padding:0 30rpx;
  display:block;  
}

#project{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.publishedProject{
  background-color: #fff;
  height: 154rpx;
  transition: transform 0.2s;
  border: rgba(217, 217, 217, 1) solid 2rpx;
}
.projectTitle{
  padding:14rpx 30rpx;
  padding-top: 26rpx;
  display:block;  
  font-size: 30rpx;
  line-height: 45rpx;
}
.projectSocialInfo{
  color: rgba(128, 128, 128, 1);
	font-size: 26rpx;
	line-height: 39rpx;
  padding:0 30rpx;
  display:block;  
}

#idol{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.myIdol{
  background-color: #fff;
  height: 154rpx;

  border: rgba(217, 217, 217, 1) solid 2rpx;
}
.avatar{
  border-radius: 50%;
  width: 104rpx;
  height: 104rpx;
  margin:32rpx 34rpx;
  vertical-align:top;
}
.userName{
  float: left;
  line-height:54rpx;
  font-size:36rpx;

}
.tip{
  float: left;
  clear: left;
  font-size: 28rpx;
  line-height: 42rpx;
  color: rgba(153, 153, 153, 1);
}
.ilb{
  display: inline-block;
  height:170rpx;
  margin-top:32rpx;
}