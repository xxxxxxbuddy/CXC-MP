<view class='header' >
  <view class='button' bindtap='back' >
    <image src='{{back_url}}'></image>
    <text>动态</text>
  </view>
  <text class='title' >
    个人资料
  </text>
</view>

<view class='myInfo' bindtap='individualInfo' >
  <image class='avatar' src='{{avatarUrl}}'/>
  <view class='ilb'>  
    <text class='userName'>{{userName}}</text>
  </view>
</view>
<view>
  <form bindsubmit='submitInfo'>
    <view>
      <text>性别</text>
      <picker range='{{sexRange}}' name='sex' bindchange='sexChange'>{{sexRange[index1]}}</picker>
    </view>
    <view>
     <text>职业</text>
      <picker range='{{jobRange}}' name='job' bindchange='jobChange'>{{jobRange[index2]}}</picker>   
    </view>
    <view class='rl'>
     <text>所属单位</text>
      <input confirm-type='next' bindblur='companyChange'></input>   
    </view>
    <view>
      <text>简介</text>
      <textarea maxlength='240' placeholder='不超过120字'></textarea>
    </view>
    <button type='primary' form-type='submit' bindtap='checkInfo'>保存</button>
  </form>
</view>