<view class='header' >
  <view class='button' bindtap='back' >
    <image src='{{back_url}}'></image>
    <text>动态</text>
  </view>
  <text class='title' >
    个人资料
  </text>
</view>

<view class='myInfo' bindtap='individualInfo' >
  <image class='avatar' src='{{avatarUrl}}'/>
  <view class='ilb'>  
    <text class='userName'>{{userName}}</text>
  </view>
</view>
<view>
  <form>
    <view>
      <text>性别</text>
      <picker range='{{sexRange}}' name='sex' >{{sexRange[0]}}</picker>
    </view>
    <view>
     <text>职业</text>
      <picker range='{{jobRange}}' name='sex' >{{jobRange[0]}}</picker>   
    </view>
    <view class='rl'>
     <text>所属单位</text>
      <input></input>   
    </view>
    <view>
      <text>简介</text>
      <textarea maxlength='240'></textarea>
    </view>

  </form>
</view>