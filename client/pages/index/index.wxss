/**index.wxss**/
page{
  height: 100%;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 28rpx;
}
#container{
  width: 100%;
  height: 100%;
  position: relative;
  background-repeat: no-repeat;
  background-size: cover;
  transition: all 0.2s;
}

.opacity{
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,0.35);
}

.flex_center{
  display: flex;
  justify-content: center;
}
/**个人用户注册界面**/
#individual{
  position: absolute;
  left: -100%;
  width:100%;
  overflow: hidden;
}
#individualBack{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 60rpx;
  top: 88rpx;
  transform: rotateY(180deg);
}

/**账户类型选择界面**/
#choosetype{
  position: absolute;
  left: 0;
  width: 100%;
  overflow: hidden;
}
#logo{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  margin-top: 208rpx;
  margin-bottom: 160rpx;
  border-radius: 50%;
  background-color: rgba(255,255,255,0.68);
}
#types view{
  color: #fff;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  line-height: 40rpx;
}
#types button{
  width: 120rpx;
  height: 120rpx;
  background-repeat: no-repeat;
  background-size: cover;
  border: none;  
}
#chooseIndividual{
  margin-bottom: 60rpx; 
  margin-left: 130rpx;
  z-index: 2;
}
#chooseEnterprise{
  margin-right: 130rpx;
  z-index: 2;
}
.text{
  margin-top: -30rpx;
}
.hr{
  border-right: 1px solid #fff;
  padding-right: 160rpx;
  padding-top: 200rpx;
  position: absolute;
  left: 160rpx;
  top: 540rpx;
}
.ht{
  position: absolute;
  right: 160rpx;
  top: 740rpx;
}
/**企业用户注册界面**/
#enterprise{
  position: absolute;
  left: 100%;
  width: 100%;
  overflow: hidden;
}
.input2{

}
#enterpriseBack{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: 60rpx;
  top: 88rpx;
}
/**共有元素**/
.avatar{
  position: relative;
  margin: 0 auto;
  margin-top: 148rpx;
  margin-bottom: 120rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: rgba(255,255,255,0.68);
}
.avatar image{
  position: absolute;
  margin-left: -60rpx;
  margin-top: -60rpx;
  left: 50%;
  top: 50%;
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
}
.inputArea{
  position: relative;
}
.inputArea image{
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  top: 8rpx;
  left: 20rpx;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
  padding-right: 12rpx;
  
  border-right: 2rpx solid #fff;
}
form{
  display: flex;
  align-items: center;
}
input{
  width: 600rpx;
  height: 80rpx;
  margin-bottom: 64rpx;
  border: 1px solid #fff;
  box-sizing: border-box;
  padding-left: 86rpx;
  color: #fff;
}

button{
  width: 240rpx;
  height: 80rpx;
  color: #fff;
  border: 1px solid #fff;
  background: transparent;
  line-height: 80rpx;
}

.placeholder{
  color: rgba(255,255,255,0.8)
}
picker{
  width: 600rpx;
  height: 80rpx;
  margin-bottom: 64rpx;
  border: 1px solid #fff;
  box-sizing: border-box;
  padding-left: 96rpx;
  color: rgba(255,255,255,0.8);
  line-height: 80rpx;
}

