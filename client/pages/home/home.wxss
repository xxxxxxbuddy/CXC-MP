page{
  background-color: #E9E9E9;
}
.myInfo{
  width: 100%;
  height: 170rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
  box-shadow: 0rpx 2rpx 2rpx 0rpx rgba(0, 0, 0, 0.5);
}
.avatar{

  width: 104rpx;
  height: 104rpx;
  margin:32rpx 34rpx;
  float: left;
}
.userName{
  float: left;
  line-height:100rpx;
  font-size:36rpx;

}
.ilb{
  display: inline-block;
  height:170rpx;
  margin-top:32rpx;
  margin-right: 350rpx;
}
.follow,.unfollow{
  display: inline-block;
  border: 2rpx solid;
  border-radius: 10rpx;
  vertical-align: top;
  margin-top: 50rpx;
  font-size: 36rpx;
  padding: 2rpx 10rpx;
}
.follow{
  color:blue;
}
.unfollow{
  color: rgba(0, 0, 0, 0.5);
}


.socialInfo{
  background-color: #fff;
  height: 130rpx;
  border-bottom:2rpx solid rgba(0, 0, 0, 0.3);
}
.socialInfo ul{
  display: flex;
}
.socialInfo ul li{
  flex: 1;
  justify-content: space-around;
  text-align: center;
}
.socialInfo ul li text{
  display: inline-block;
}

.detailInfo{
  background-color: #fff;
  box-shadow: 0 2rpx 2rpx 0 rgba(0, 0, 0, 0.5);
  padding:50rpx 0;
  
}
.detailInfo label{
  width: 170rpx;
  padding: 0 10rpx;
  display: inline-block;
  line-height: 60rpx;
  text-align: center;
  border-radius: 16rpx;
  background-color: rgba(204, 204, 204, 1);
  margin: 0 36rpx;
}
.list{
  margin-bottom: 20rpx;
  font-size: 32rpx;
}
.introduce{
  margin:10rpx 40rpx;
  width: 620rpx;
}