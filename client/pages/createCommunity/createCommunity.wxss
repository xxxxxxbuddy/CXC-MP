#container{
  position: relative;
  overflow: hidden;
}

.header{
  background-color: #fff;
  width:100%;
  padding-bottom:20rpx;
  margin-bottom: 70rpx;
  box-shadow: 0rpx 2rpx 2rpx 0rpx rgba(0, 0, 0, 0.5);
}
.header image{
  width: 40rpx;
  height: 38rpx;
  margin-top: 22rpx;
  margin-left: 16rpx;
  margin-right: 13rpx;
  margin-bottom:-4rpx;

}
.header text{
  color: rgba(0, 187, 221, 1);
  line-height: 30rpx;
  font-size: 40rpx;
}
.button{
  width: 230rpx;
  display: inline-block;
}
.title{
  margin-left: 75rpx;
  display: inline-block;
}


input{
  display: inline-block;
  border: 2rpx solid;
  vertical-align: middle;
  width: 470rpx;
  height: 60rpx;
  padding: 5rpx;
  border-radius: 10rpx;
}
picker{
  display: inline-block;
  border: 2rpx solid;
  vertical-align: middle;
  width: 470rpx;
  height: 60rpx;
  padding: 5rpx;
  border-radius: 10rpx;  
  text-align: center;
}
label{
  margin-left: 40rpx;
  margin-right:20rpx;
}
.inviteFriend{
  margin-left: 105rpx;
}

textarea{
  border:2rpx solid;
  border-radius:10rpx;
  padding:5rpx;
  margin-left:45rpx;
  width:625rpx;
  height: 500rpx;
  margin-bottom: 20rpx;
  z-index: 0;
}
form view{
  margin-bottom: 30rpx;
}
.uploadPic{
  position: relative;
  width: 200rpx;
  height: 200rpx;
  background-size: contain;
  margin-left: 50rpx;
  margin-bottom:70rpx;
}
.uploadPic text{
  position: absolute;
  bottom:-46rpx;
  left:16rpx;
}
.create{
  background-color:rgb(0,186,173);
  width:600rpx;
  margin-bottom: 20rpx;
}
#inviteList{
  z-index: 2;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;

  transition: transform 0.3s;
}
.inviteHeader{
  height: 46rpx;
  padding:20rpx;
  border-bottom:2rpx solid rgba(0,0,0,0.3);
}
.inviteHeader text{
  color: rgba(0, 187, 221, 1);
  line-height: 30rpx;
  font-size: 40rpx;
}
.cancel{
  padding-left: 10rpx;
}
.inviteTitle{
  margin-left: 185rpx;
}
.done{
  margin-left: 150rpx;
}


.memberList{
  margin: 10rpx;
}
checkbox{
  display: block;
  width:100%;
  margin: 10rpx;
}
.item{
  width:650rpx;
  border-bottom:2rpx solid rgba(0,0,0,0.3);
}
checkbox image{
  width:60rpx;
  height:60rpx;
  border-radius:10rpx;
  vertical-align: top;
  margin: 10rpx;
}
.inviteUserName{
  line-height:90rpx;
}