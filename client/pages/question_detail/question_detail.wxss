page{
    background-color: #E9E9E9;
    font-family: Microsoft Yahei,Arial, Helvetica, sans-serif;
}

.header{

  background-color: #fff;
  width:100%;
  padding-bottom:20rpx;
}
.header image{
  width: 22rpx;
  height: 38rpx;
  margin-top: 22rpx;
  margin-left: 16rpx;
  margin-right: 13rpx;
  margin-bottom:-4rpx;

}
.header text{
  color: rgba(0, 187, 221, 1);
  line-height: 36rpx;
}
.button{
  width: 160rpx;
  display: inline-block;
}
.questionInfo{
  margin-bottom: 30rpx;
}
.title{
  margin-left: 140rpx;
  display: inline-block;
}

.questionBox{
	  width: 100%;
    margin-top: -10rpx;
    border-top: 2rpx solid rgba(166, 166, 166, 1);
    padding-top: 30rpx;
    padding-left: 20rpx;
	background-color: rgba(255, 255, 255, 1);
    box-shadow: 0rpx 2rpx 5rpx 0rpx rgba(0, 0, 0, 0.5);
    height: 100%;
}
.questionTitle{
    font-size: 36rpx;
}
.userInfo{
    margin-top: 10rpx;
    margin-bottom: 20rpx;
    font-size: 25rpx;
    height: 30rpx;
}
.avatar{
    width: 50rpx;
    height: 50rpx;
    margin-top: 10rpx;
    float: left;
}
.userName{
   line-height: 70rpx;
    margin-left: 10rpx;
    float: left;
}
.time{
    line-height: 70rpx;
    float: right;
    margin-right: 50rpx;
    color: rgba(166, 166, 166, 1);
}
.subTitle{
    margin-top: 60rpx;
    margin-left: 20rpx;
    margin-right: 30rpx;
    font-size: 26rpx;
    color: rgba(166, 166, 166, 1);
    margin-bottom: 20rpx;
}
.socialInfo{
    margin-left: 20rpx; 
    margin-bottom: 20rpx;
    font-size: 21rpx;
}
.socialInfo ul li{
    color: rgba(170, 170, 170, 1);
    
}
.socialInfo ul li image{
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}
.ml{
    margin-left: 180rpx;
}
