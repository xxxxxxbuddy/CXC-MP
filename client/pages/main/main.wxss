/* pages/main/main.wxss */
page{
    background-color: #E9E9E9;
    font-family: Microsoft Yahei,Arial, Helvetica, sans-serif;
}
/* header */
.header{
    z-index: 1;
    position: fixed;
    top: 0;
    background-color:rgba(0, 187, 211, 1);
    width: 100%;
}
.searchBox{
  display: flex;
  justify-content: center;
}
.search{
    width: 480rpx;
    height: 96rpx;
    margin-top: 32rpx;
    margin-bottom: 46rpx;
    padding-left: 90rpx;
    border-radius: 5rpx;
	font-size: 32rpx;
	line-height: 50rpx;
    box-shadow: 0rpx 5rpx 5rpx 0rpx rgba(0, 0, 0, 0.5);
    background-color: #fff;
    transition: width 0.2s;
}

.myInfo{
    margin-top: 45rpx;
    margin-right: 20rpx;
    display: flex;
    width: 70rpx;
    height: 70rpx;
}
.searchIcon{
    position: absolute;
    left: 110rpx;
    top: 50rpx;
    width: 60rpx;
    height: 60rpx;
    opacity: 0.54;
    transition: left 0.2s;
}
.publish{
    margin-top: 51rpx;
    margin-left: 10rpx;
    display: flex;
    width: 59rpx;
    height: 56rpx;
}

.searchResult{
  height: 1334rpx;
  z-index: 2;
  background-color: #fff;

}

.tags{
    padding-bottom: 2rpx;
}
.tags ul{
    list-style: none;
    display: flex;
}
.tags ul li{
    display: inline-flex;
    justify-content: space-around;
    width: 50%;
    padding-bottom: 30rpx;
    line-height: 32rpx;
    color: rgba(255, 255, 255, 0.7);

}

#community{
    background-color: #fff;
    padding-left: 20rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    box-shadow:  0rpx 5rpx 5rpx 0rpx rgba(37, 19, 19, 0.3);
    transition: max-height 0.2s;
    overflow: hidden;
}
.pullDownIcon{
  width:50rpx;
  height: 50rpx;
  margin-right:10rpx;
  float: right;
  transition: transform 0.2s;
}
#community ul{
    flex-wrap: nowrap;
    flex: 1;
}
#community ul li{
    display: inline-flex;
    text-align: center;
    border:2rpx solid #fff;
    margin: 6rpx 10rpx;
    border-radius: 20rpx;
    padding:0 10rpx;
    background-color: rgba(204, 204, 204, 1);
    color: rgba(80, 80, 80, 1);
    font-size: 28rpx;
    line-height: 42rpx;
}
/* 发布动态/项目 */
#publishBox{
    z-index: 3;
    position: fixed;
    top: 0;
    width: 100%;
    background-color: #fff;
    display: flex;
    justify-content: space-around;
    border-radius: 10rpx;
    transition: 0.3s top;
}
#publishBox image{
    margin-top: 54rpx;
    margin-bottom: 17rpx;
    width: 185rpx;
    height: 167rpx;
}
#publishBox .close{
    margin-top: 0;
    position: absolute;
    top: 0;
    right: 0;
    width: 73rpx;
    height: 75rpx;
}
.pubType{
  margin-left:12rpx;
  margin-bottom:27rpx;

}

/* 动态 */
.main{
    position: relative;
    transition: 3s opacity;
    opacity: 2;
    margin-top: 320rpx;
    vertical-align: middle;
}
.title{
    margin-left: 18rpx;
}
.userName{
    line-height: 70rpx;
    margin-left: 10rpx;
    float: left;
}
.time{
    line-height: 70rpx;
    float: right;
    margin-right: 50rpx;
}
project text{
    color: rgba(80, 80, 80, 1);
}

.mask{
    position: fixed;
    top: 0;
    height: 100%;
    width: 100%;
    background-color: #000;
    opacity: 0.3;
    transition: 0.3s opacity;
    overflow: hidden;
}

/* 搜索结果 */
.classify{
  border-bottom: 2rpx solid #E9E9E9;
}
.classify image{
  height: 40rpx;
  width: 38rpx;
}
.typeName{
  float: left;
  margin:20rpx;
  clear:both;
}
.more{
  float: right;
  margin:20rpx;
}
.publishedQuestion{
  background-color: #fff;
  height: 154rpx;
  transition: transform 0.2s;
  border: rgba(217, 217, 217, 1) solid 2rpx;
}
.questionTitle{
  padding:14rpx 30rpx;
  padding-top: 26rpx;
  display:block;  
  font-size: 30rpx;
  line-height: 45rpx;
}
.questionSocialInfo{
  color: rgba(128, 128, 128, 1);
	font-size: 26rpx;
	line-height: 39rpx;
  padding:0 30rpx;
  display:block;  
}

.publishedProject{
  background-color: #fff;
  height: 154rpx;
  transition: transform 0.2s;
  border: rgba(217, 217, 217, 1) solid 2rpx;
}
.projectTitle{
  padding:14rpx 30rpx;
  padding-top: 26rpx;
  display:block;  
  font-size: 30rpx;
  line-height: 45rpx;
}
.projectSocialInfo{
  color: rgba(128, 128, 128, 1);
	font-size: 26rpx;
	line-height: 39rpx;
  padding:0 30rpx;
  display:block;  
}

.myIdol{
  background-color: #fff;
  height: 154rpx;

  border: rgba(217, 217, 217, 1) solid 2rpx;
}
.avatar{
  border-radius: 50%;
  width: 104rpx;
  height: 104rpx;
  margin:32rpx 34rpx;
  vertical-align:top;
}
.username{
  float: left;
  line-height:54rpx;
  font-size:36rpx;

}
.tip{
  float: left;
  clear: left;
  font-size: 28rpx;
  line-height: 42rpx;
  color: rgba(153, 153, 153, 1);
}
.ilb{
  display: inline-block;
  height:170rpx;
  margin-top:32rpx;
}